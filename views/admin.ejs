    <div class="container">
    <h1> UPLOAD ARTICLE </h1>
    <form  action="/article" method="POST">
    <div class="form-group">
    <label for="exampleFormControlSelect2">CATEGORY</label>
    <select class="form-control" id="exampleFormControlSelect2" placeholder="Select a category..." name="category" required>
      <option>Entertainment</option>
      <option>Sports</option>
      <option>Technology</option>
      <option>Culture</option>
      <option>Bussiness</option>
      <option>Politics</option>
      <option>Travel</option>
    </select>
  </div>
  <div class="form-group">
    <label>ARTICLE TITLE</label>
    <input type="text" class="form-control" name="title" placeholder="Enter the title..." required>
</div>
	<div class="form-group">
	<label>ARTICLE CONTENT</label>
    <textarea class="form-control" name="content" rows="20" placeholder="Place the article here ..."  required></textarea>
  </div>
  <button id="article-upload" class="btn btn-primary btn-lg" type="submit">Upload</button>
</form>
